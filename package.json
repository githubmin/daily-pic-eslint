{
  "name": "daily-pic",
  "version": "0.0.1",
  "description": "daily picture showed in the terminal",
  "main": "src/index.js",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "format": "prettier src/ --write",
